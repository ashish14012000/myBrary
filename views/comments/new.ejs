<%- include('../partials/header')%>
<div class="container" style="margin-top: 10%;">
    <h1 class="display-5 text-center">Drop a review for <%= book.name %>: </h1>
    <form action="/books/<%= book._id %>/comments" method="POST">
        <div class="form-group">
            <div class="input-group">
                <textarea class="form-control" name="comment[text]" placeholder="Text" cols="30" rows="5"></textarea>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <button class="btn btn-lg btn-success" type="submit">Submit</button>
            <a class="btn btn-primary btn-lg" href="/books/"+<%= book._id %>>Go back</a>
        </div>
    </form>
</div>
<%- include('../partials/footer')%>
