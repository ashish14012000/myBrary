<%- include('../partials/header')%>
<div class="container" style="margin-top: 10%;">
    <h1 class="display-5 text-center">Edit your review</h1>
    <form action="/books/<%= book_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <div class="input-group">
                <textarea class="form-control" name="updatedText" cols="30" rows="5"><%= comment.text%></textarea>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <button class="btn btn-lg btn-success" type="submit">Update</button>
            <a class="btn btn-primary btn-lg" href="/books/"+<%= book_id %>>Go back</a>
        </div>
    </form>
</div>
<%- include('../partials/footer')%>
