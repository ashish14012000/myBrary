<!-- form for adding a new book, accessible by admin only -->
<%- include('../partials/header')%>

<div class="container d-flex flex-column mt-4">
    <div>
        <h1 class="text-center">Add a new Book</h1>
        <form action="/books/new" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> ISBN </span>
                    </div>
                    <input class="form-control" type="text" name="isbn" placeholder="Enter book's ISBN" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Name </span>
                    </div>
                    <input class="form-control" type="text" name="name" placeholder="Book name.." required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Image </span>
                    </div>
                    <input class="form-control" type="text" name="image" placeholder="Enter Book's image url.." required>
                </div>
            </div>
            <div class="form-group" id="authorList">
                <label>Authors: </label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Name </span>
                    </div>
                    <input class="form-control" type="text" name="authors[0][name]" placeholder="Author name.." required>
                    <div class="input-group-prepend">
                        <span class="input-group-text"> Image </span>
                    </div>
                    <input class="form-control" type="text" name="authors[0][image]" placeholder="Author image url.." required>
                </div>
                <p class="mt-2">
                    <button class="btn btn-success" id="addNewAuthor" type="button">Add More</button>
                    <button class="btn btn-danger" id="removeLastAuthor" type="button">Delete last Author</button>
                </p>
            </div>
            <div class="form-group" id="genreList">
                <label>Genres: </label>
                <input class="form-control" type="text" name="genres[0]" placeholder="Enter Genre">
                <p class="mt-2">
                    <button class="btn btn-success" id="addNewGenre" type="button">Add Genre</button>
                    <button class="btn btn-danger" id="removeLastGenre" type="button">Delete last Genre</button>
                </p>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Publish-date </span>
                    </div>
                    <input class="form-control" type="date" name="publishDate" placeholder="Select Publication Date" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Quantity </span>
                    </div>
                    <input class="form-control" type="number" min="0" max="100" name="quantity" value="0" required>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success" type="submit">Add to store</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/addMultipleInputs.js"></script>
<%- include('../partials/footer')%>