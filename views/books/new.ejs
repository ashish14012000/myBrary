<!-- form for adding a new book, accessible by admin only -->
<%- include('../partials/header')%>

<div class="container-fluid row">
    <div class="col-md-4">
        <h1>Add a new Book</h1>
        <form action="/books/new" method="POST">
            <div class="form-group">
                <label>Book's ISBN: </label>
                <input class="form-control" type="text" name="isbn" placeholder="ISBN">
            </div>
            <div class="form-group">
                <label>Book Name: </label>
                <input class="form-control" type="text" name="name" placeholder="Book name..">
            </div>
            <div class="form-group" id="authorList">
                <label>Authors: </label>
                <input class="form-control" type="text" name="authors[0]" placeholder="Author name..">
                <p class="mt-2">
                    <button class="btn btn-success" id="addNewAuthor" type="button">Add More</button>
                    <button class="btn btn-danger" id="removeLastAuthor" type="button">Delete last Author</button>
                </p>
            </div>
            <div class="form-group" id="genreList">
                <label>Genres: </label>
                <input class="form-control" type="text" name="genres[0]" placeholder="Enter Genre">
                <p class="mt-2">
                    <button class="btn btn-success" id="addNewGenre" type="button">Add Genre</button>
                    <button class="btn btn-danger" id="removeLastGenre" type="button">Delete last Genre</button>
                </p>
            </div>
            <div class="form-group">
                <label>Publish-date: </label>
                <input class="form-control" type="date" name="publishDate" placeholder="Publication Date">
            </div>
            <div class="form-group">
                <label>Quantity: </label>
                <input class="form-control" type="number" min="0" max="100" name="quantity" value="0">
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
        </form>
    </div>
</div>
<script src="/js/addMultipleInputs.js"></script>
<%- include('../partials/footer')%>