<!-- Supply chain management, accessible only by admin -->
<%- include('../partials/header')%>
<div class="container d-flex flex-column mt-4">
    <div>
        <h1 class="text-center">Update <%= book.name %> </h1>
        <form action="/books/<%= book._id %>/update?_method=PUT" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Quantity </span>
                    </div>
                    <input class="form-control" type="number" name="quantity" min="0" max="100" value="<%= book.quantity %>">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Image </span>
                    </div>
                    <input class="form-control" type="text" name="image" value="<%= book.image %>">
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
            <button class="btn btn-warning"><a href="/books/<%= book._id %>">Go Back</a></button>
        </form>
    </div>
</div>
<%- include('../partials/footer')%>