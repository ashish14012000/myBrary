
<%- include('./partials/header')%>
<div class="container-fluid row">
    <div class="col-md-4">
        <h1>Update password</h1>
        <form action="/update-password" method="POST">
            <div class="form-group">
                <label>Old password: </label>
                <input class="form-control" type="password" name="old_password" placeholder="Enter old password" required>
            </div>
            
            <div class="form-group">
                <label>New password: </label>
                <input class="form-control" type="password" name="new_password1" placeholder="Enter new password" required>
            </div>
            <div class="form-group">
                <label>Confirm new password: </label>
                <input class="form-control" type="password" name="new_password2" placeholder="Re-enter new password" required>
            </div>
            <button class="btn btn-success" type="submit">Update</button>
        </form>
    </div>
</div>

<%- include('./partials/footer')%>