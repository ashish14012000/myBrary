<!-- Add a new author, accessible to only admin -->
<%- include('../partials/header')%>
<div class="container" style="margin-top: 10%;">
        <h1 class="display-5 text-center">Add a new Author</h1>
        <form action="/authors/new" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Name </span>
                    </div>
                    <input class="form-control" type="text" name="name" placeholder="Author name.." required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"> Image </span>
                    </div>
                    <input class="form-control" type="text" name="image" placeholder="Enter Image url.." required>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary btn-lg" type="submit">Add</button>
            </div>
        </form>
</div>
<%- include('../partials/footer')%>